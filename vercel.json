{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "crons": [
    {
      "path": "/api/sync-sports",
      "schedule": "0 0,5,12 * * *"
    },
    {
      "path": "/api/sync-domestic",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/sync-odds-api",
      "schedule": "0 */4 * * *"
    }
  ]
}
